<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd        http://camel.apache.org/schema/spring       http://camel.apache.org/schema/spring/camel-spring.xsd">
    <camelContext id="camel" xmlns="http://camel.apache.org/schema/spring">
        <restConfiguration apiContextPath="api-docs"
            apiVendorExtension="true" component="spark-rest"
            host="localhost" port="8080">
            <!-- setup swagger api descriptions -->
            <apiProperty key="api.version" value="1.2.0"/>
            <apiProperty key="api.title" value="Transform API"/>
            <apiProperty key="api.description" value="Transform message from JSON to XML and vice-versa"/>
        </restConfiguration>
        <rest consumes="application/xml;application/json"
            id="rest-6fc4a03f-5066-4770-9022-f627d88b37cd" path="/proxy" produces="application/xml;application/json">
            <post id="72d518ec-acd4-42b4-aeb0-8d70ce6506e6">
                <description>Transform message based on Content-Type header</description>
                <to uri="direct:proxy"/>
            </post>
        </rest>
    </camelContext>
</beans>
