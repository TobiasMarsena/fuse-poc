<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd        http://camel.apache.org/schema/spring       http://camel.apache.org/schema/spring/camel-spring.xsd">
    <camelContext id="camel" xmlns="http://camel.apache.org/schema/spring">
        <dataFormats>
            <jaxb contentTypeHeader="false" contextPath="org.i3.model"
                filterNonXmlChars="false" fragment="false" id="jaxb"
                ignoreJAXBElement="false" mustBeJAXBElement="false"
                objectFactory="false" prettyPrint="false" schemaSeverityLevel="0"/>
            <json allowJmsType="false" allowUnmarshallType="false"
                contentTypeHeader="false"
                enableJaxbAnnotationModule="false" id="jackson"
                library="Jackson" prettyPrint="false"
                useDefaultObjectMapper="true" useList="false"/>
        </dataFormats>
        <restConfiguration apiContextPath="api-docs"
            apiVendorExtension="true" component="spark-rest"
            host="localhost" port="8080">
            <!-- setup swagger api descriptions -->
            <apiProperty key="api.version" value="1.0.0"/>
            <apiProperty key="api.title" value="Hello API"/>
            <apiProperty key="api.description" value="Greetings in JSON or XML"/>
        </restConfiguration>
        <rest bindingMode="json"
            id="rest-68077129-cb85-40db-a87b-dc10fa2482ce" path="/hello/json">
            <get id="47908bcc-1680-4ee9-9688-0b3673eadb62" outType="org.i3.model.Hello">
                <to uri="bean:helloService?method=greeting"/>
            </get>
        </rest>
        <rest bindingMode="xml"
            id="rest-1e2aebdb-879e-4b61-b307-492ea0c946f6" path="/hello/xml">
            <get id="c7750cba-9000-4290-bec0-0eb43f7edc95" outType="org.i3.model.Hello">
                <to uri="bean:helloService?method=greeting"/>
            </get>
        </rest>
    </camelContext>
</beans>
